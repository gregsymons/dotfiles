[user]
	name = Greg Symons
	email = gsymons@affinipay.com
    signingkey=5836822F
[alias]
    co=checkout
    ci=commit
    st=status
    rb="!f() {                    \
      set -x;                     \
      echo $@;                    \
      export BRANCH=$1;           \
      export REMOTE=${2:-origin}; \
      BASE=${3:-$(git remote-head)};          \
      echo Creating branch $BRANCH on remote $REMOTE off of $BASE &&  \
      git checkout -b $BRANCH $BASE                               &&  \
      git push -u $REMOTE $BRANCH;                                    \
    }; f"
    missing=!bash -c '"git cherry -v $1 $2 $3 | grep ^+ || echo No missing changesets"' $1 $2 $3
    br=branch
    pf=push --force-with-lease
    cA=commit --amend -CHEAD
    remote-head=!bash -c '"export REMOTE=${1:-origin}; git remote show $REMOTE | grep \"HEAD branch\" | cut -d \":\" -f 2 | tr -d \"[:space:]\"; echo"' $1
    dmerged=!~/.git_aliases/dmerged $1
    dremote=!~/.git_aliases/dremote $@
    fixup=commit --fixup
    rbi=rebase -i --autosquash
    fm=fetch origin master:master
    fp=fetch --prune
    bitbucket=!bash -c 'git clone git@bitbucket.org:$@' $@ 
[core]
	excludesfile = /Users/gsymons/.gitignore
[color]
	ui = auto
[push]
	default = upstream
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[commit]
	template = /Users/gsymons/.stCommitMsg
[diff "ansible-vault-prod"]
	textconv = ENV=prod ansible-vault --vault-password-file=~/work/deploy/ansible-vault-keychain view
[diff "ansible-vault-qa"]
	textconv = ENV=qa ansible-vault --vault-password-file=~/work/deploy/ansible-vault-keychain view
[diff "ansible-vault-cde"]
	textconv = ENV=cde ansible-vault --vault-password-file=~/work/deploy/ansible-vault-keychain view
[merge "ansible-vault"]
	name = ansible-vault merge driver
	driver = /Users/gsymons/work/deploy/ansible-vault-merge %O %A %B %P
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
